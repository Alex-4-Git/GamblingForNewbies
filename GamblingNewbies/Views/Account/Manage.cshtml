@using GamblingNewbies.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Manage Account";
}
<style>
    form {
        padding: 0px;
        margin: 0px;
    }
    #forumcontainer {
        background-color: rgba(154, 155, 171, 0.8);
        color: black;
        padding: 20px;
        border-radius: 10px;
        margin: 10px;
        width:70%;
        margin-left:15%;
    }
    #forumheading {
        padding-left: 10px;
        color: white;
    }
    #forumtable {
        padding: 20px;
        padding-left: 10%;
        padding-right: 10%;
        color: black;
    }
    div#spacingprofile {
        height: 70px;
    }
    .btn.btn-primary {
        background-color: rgba(92, 92, 126, 1);
        color: black;
        border-color: black;
    }
    .btn.btn-primary:hover {
        background-color: rgba(50, 20, 61, 1);
        color: white;
        border-color: white;
    }
    a#forumcontainer {
        color: #563d7c;
        font-weight: bold;
    }
        a:hover {
            color: rgba(192, 194, 228, 1);
            text-underline-position: left;
            text-decoration: none;
        }
    tr td {
        align-content: center;
        text-align: center;
    }
    textarea.title {
        resize: none;
        width: 600px;
        height: 50px;
        max-width: 100%;
        max-height: 50%;
    }
    textarea.text {
        resize: none;
        width: 600px;
        height: 300px;
        max-width: 100%;
        max-height: 50%;
    }
    b {
        color: white;
    }
    .form-control {
        max-width:300px;
    }

</style>
<div id="spacingprofile"></div>
<div id="forumcontainer">
    <h2>@ViewBag.Title.</h2>
    <h4><a href="/Profile/DearUser/@User.Identity.Name" class="btn btn-primary btn-sm">View/Edit Public Profile</a></h4>
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.HasLocalPassword)
            {
                @Html.Partial("_ChangePasswordPartial")
            }
            else
            {
                @Html.Partial("_SetPasswordPartial")
            }

            <section id="externalLogins">
                @Html.Action("RemoveAccountList")
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>